                            <TextBlock  Text="Настройки подключения"></TextBlock>
                        </StackPanel>
  
                    </Button>
                   
                </StackPanel>
                   
        <ComboBox Name="VariantsReport" Grid.Row="1">
            <ComboBoxItem Name="V1">
                        <TextBlock Text="РЕЗУЛЬТАТЫ МЕДИКО-ЭКОНОМИЧЕСКОГО КОНТРОЛЯ"></TextBlock>
            </ComboBoxItem>
            <ComboBoxItem Name="V2">
                        <TextBlock Text="РЕЗУЛЬТАТЫ ПОВТОРНОГО МЕДИКО-ЭКОНОМИЧЕСКОГО КОНТРОЛЯ"></TextBlock>
            </ComboBoxItem>

            <ComboBoxItem>
                        <TextBlock Text="РЕЗУЛЬТАТЫ ПЛАНОВОЙ МЕДИКО-ЭКОНОМИЧЕСКОЙ ЭКСПЕРТИЗЫ"></TextBlock>
            </ComboBoxItem>
                    <ComboBoxItem>
                        <TextBlock Text="РЕЗУЛЬТАТЫ ЦЕЛЕВОЙ МЕДИКО-ЭКОНОМИЧЕСКОЙ ЭКСПЕРТИЗЫ"></TextBlock>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <TextBlock Text="РЕЗУЛЬТАТЫ ПОВТОРНОЙ МЕДИКО-ЭКОНОМИЧЕСКОЙ ЭКСПЕРТИЗЫ"></TextBlock>
                    </ComboBoxItem>

                    <ComboBoxItem>
                        <TextBlock Text="РЕЗУЛЬТАТЫ ПЛАНОВОЙ ЭКСПЕРТИЗЫ КАЧЕСТВА МЕДИЦИНСКОЙ ПОМОЩИ"></TextBlock>
                    </ComboBoxItem>


                    <ComboBoxItem>
                        <TextBlock Text="РЕЗУЛЬТАТЫ ЦЕЛЕВОЙ ЭКСПЕРТИЗЫ КАЧЕСТВА МЕДИЦИНСКОЙ ПОМОЩИ"></TextBlock>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <TextBlock Text="РЕЗУЛЬТАТЫ ПОВТОРНОЙ ЭКСПЕРТИЗЫ КАЧЕСТВА МЕДИЦИНСКОЙ ПОМОЩИ "></TextBlock>
                    </ComboBoxItem>
                </ComboBox>


              
                <Button Grid.Row="2" Name="Report" Click="Report_Click" Content="Сформировать"></Button>
</StackPanel>
        </Border>
    </Grid>
</Window>
